<form name='{{name}}'>
    <div class="card2">
        {{#each meta.panels}}
        {{#each fields}}
        <div class="row-fluid control-group">
            <div class="span2">{{str  this.label ../../this.model.module}}</div>
            <div class="span10 controls">
            {{field ../../this}}
            <p class="help-block"></p>
            </div>
        </div>
        {{/each}}
        {{/each}}
        <div class="form-actions">
            {{#each meta.buttons}}
            {{field ../this}}
            {{/each}}
        </div>
    </div>
</form>
